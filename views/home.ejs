<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
  <title>User management</title>

</head>

<body>
  <div class="container">
    <h1>Hello World </h1>
    <a class="btn btn-primary mb-2" href="/create">Add-Users</a>
    <table class="table">

      <thead>
        <tr>
          <th scope="col">User name</th>
          <th scope="col">Email ID</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<users.length; i++){ %>
        <tr>
          <td><%= users[i].userName %></td>
          <td><%= users[i].email %></td>
          <td>
            <a class="btn btn-primary" href="/view/<%= users[i].id %>">view</a>
            <a class="btn btn-success" href="/edit/<%= users[i].id %>">Edit</a>
            <a class="btn btn-danger" href="/delete/<%= users[i].id %>">Delete</a>
          </td>
          <% } %>
        </tr>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>
</body>

</html>